datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Camera {
  id       Int        @id @default(autoincrement())
  name     String
  location String
  incidents Incident[]
}

model Incident {
  id           Int      @id @default(autoincrement())
  camera        Camera   @relation(fields: [cameraId], references: [id])
  cameraId     Int
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  resolved     Boolean  @default(false)
}
